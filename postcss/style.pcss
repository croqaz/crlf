@tailwind utilities;

body {
    font-family: "Inter var", system-ui, sans-serif !important;
    font-kerning: normal;
    font-feature-settings: "kern", "liga", "calt", "ss02", "cv08";
    font-variant-ligatures: contextual common-ligatures;
